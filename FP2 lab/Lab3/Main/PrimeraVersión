package laboratorio03;
import java.util.*;
public class DemoBatalla_Estrada_Arce {
    public static void main(String[] args) {
        Nave[] misNaves = new Nave[10];
        Scanner sc = new Scanner(System.in);
        String nomb, col;
        int fil, punt;
        boolean est;
        for (int i = 0; i < misNaves.length; i++) {
            System.out.println("Nave " + (i + 1));
            System.out.print("Nombre: ");
            nomb = sc.next();
            System.out.print("Fila: ");
            fil = sc.nextInt();
            System.out.print("Columna: ");
            col = sc.next();
            System.out.print("Estado: ");
            est = sc.nextBoolean();
            System.out.print("Puntos: ");
            punt = sc.nextInt();
            misNaves[i] = new Nave();
            misNaves[i].setNombre(nomb);
            misNaves[i].setFila(fil);
            misNaves[i].setColumna(col);
            misNaves[i].setEstado(est);
            misNaves[i].setPuntos(punt);
        }
        System.out.println("\nNaves creadas:");
        mostrarNaves(misNaves);
        mostrarPorNombre(misNaves,sc,Nave);
        mostrarPorPuntos(misNaves);
        System.out.println("\nNave con mayor número de puntos: " + mostrarMayorPuntos(misNaves));
    }
    public static void mostrarNaves(Nave[] flota) {
    	for (int i=0; i<flota.length;i++) {
			imprimirObjeto(flota[i]);
			System.out.println("-------------------");
    	}
    }
    public static void imprimirObjeto(Nave Miobjeto) {
    	System.out.println("Nave: "+Miobjeto.getNombre());
    	System.out.println("Posicion de fila: "+Miobjeto.getFila());
    	System.out.println("Posicion de columna: "+Miobjeto.getColumna());
    	System.out.println("Estado de la nave: "+Miobjeto.getEstado());
    	System.out.println("Puntaje de la nave: "+Miobjeto.getPuntos());
    }
    public static void mostrarPorNombre(Nave[] flota, Scanner scan) {
    	System.out.println ("Ingrese el nombre que va a buscar");
    	String nombre = scan.next();
    	for (int i=0; i<flota.length;i++) {
    		if (flota[i].getNombre().equals(nombre)) {
    			System.out.println("Datos de la nave: \n");
    			imprimirObjeto ();
    		}
    		
    	}
    }
